{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "jasmine",
            "node",
            "cypress"
        ],
        "baseUrl": "./",
        "paths": {
            "@env/*": [
                "src/environments/*"
            ],
            "@domain/*": [
                "src/app/domain/*"
            ],
            "@app/*": [
                "src/app/*"
            ],
            "@innovative/*": [
                "node_modules/@bit/innovative.innovative.innovative-core/dist/innovative-core/*"
            ],
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
